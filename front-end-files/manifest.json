{
    "manifest_version": 3,
    "name": "PhishShield AI",
    "version": "1.0",
    "description": "AI-powered phishing detection for Gmail.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://mail.google.com/*"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://mail.google.com/*"],
            "js": ["scripts/content.js"],
            "css": ["css/content.css"]
        }
    ],
    "icons": {
        "16": "icons/phishshield_logo_16.png",
        "48": "icons/phishshield_logo_48.png",
        "128": "icons/phishshield_logo_128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/phishshield_logo_16.png",
            "48": "icons/phishshield_logo_48.png",
            "128": "icons/phishshield_logo_128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "css/styles.css",
                "css/*",
                "icons/*"
            ],
            "matches": ["https://mail.google.com/*"]
        }
    ]
}