{
    "manifest_version": 3,
    "name": "Email Content Extractor",
    "version": "1.0",
    "description": "Extracts email subject and content from an email page.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://mail.google.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  