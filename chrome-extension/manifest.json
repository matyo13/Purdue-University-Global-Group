{
    "manifest_version": 3,
    "name": "PhishShield AI",
    "version": "1.0",
    "description": "Scans emails for potential phishing attempts.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["front-end-files/scripts/content.js"],
            "css": ["front-end-files/styles/content.css"]
        }
    ],
    "icons": {
        "16": "icons/phishshield_logo_16.png",
        "48": "icons/phishshield_logo_48.png",
        "128": "icons/phishshield_logo_128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/phishshield_logo_16.png",
            "48": "icons/phishshield_logo_48.png",
            "128": "icons/phishshield_logo_128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "css/styles.css",
                "css/*",
                "icons/*"
            ],
            "matches": ["https://mail.google.com/*"]
        }
    ]
}